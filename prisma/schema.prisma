generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  codes     Code[]
  images    Image[]
  ImageLog  ImageLog[]
}

model Code {
  id        Int      @id @default(autoincrement())
  query     String
  content   String
  is_edit   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model Image {
  id        Int      @id @default(autoincrement())
  url       String
  query     String
  prompt    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model ImageLog {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  query     String
  prompt    String
  imageUrl  String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
